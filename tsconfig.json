{
	"include": ["index.ts", "ambient.d.ts"],
	"compilerOptions": {
        "noEmit": true,

		"lib": ["ES2022"],
		"target": "ES2022",

		"module": "nodenext",
		"moduleResolution": "nodenext",

		"allowJs": true,
		"checkJs": true,

		"strict": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"typeRoots": ["./node_modules/@types"]
	}
}
